      </cross-site-constraint>
   </service>
   -->
   <service>
		<name>Token HTTP Proxy</name>
		<description>HTTP Proxy Service to obtain token</description>
		<accept>http://${gateway.host}:${gateway.base.port}/token</accept>	
		<connect>http://demo-stage.kaazing.com:8080/token</connect>
		<type>proxy</type>
	</service>

  <service-defaults>
    <accept-options>
      <ws.bind>80</ws.bind>
      <http.bind>80</http.bind>
      <wss.bind>443</wss.bind>
      <https.bind>443</https.bind>
    </accept-options>
  </service-defaults>

</gateway-config>
